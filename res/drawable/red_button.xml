<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="@color/cinza_escuro"
                android:centerY="90%"
                android:endColor="@color/cinza_escuro_trans"
                android:startColor="@color/cinza_escuro_trans" />

            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:top="2dp">
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle" >
                    <gradient
                        android:centerColor="@color/cinza"
                        android:endColor="@color/cinza"
                        android:startColor="@color/cinza" />

                    <corners android:radius="3dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle" >
                    <gradient
                        android:centerColor="@color/red"
                        android:endColor="@color/red"
                        android:startColor="@color/red" />

                    <corners android:radius="3dp" />
                </shape>
            </item>
        </selector>
    </item>

</layer-list>