<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Active tab -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/trasparent" />
        </shape></item>
    <item><layer-list>
            <item><shape android:shape="rectangle">
                    <corners android:radius="5sp" />

                    <gradient android:angle="45" android:centerColor="@color/black" android:centerX="90%" android:centerY="10%" android:endColor="@color/cinza_escuro_trans" android:startColor="@color/cinza_escuro" />

                </shape></item>
            <item><shape android:shape="rectangle">
                    <corners android:radius="5sp" />

                    <solid android:color="@color/white" />

                </shape></item>
        </layer-list></item>

</selector>