<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/campo_branco"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/item_list_barra"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/campo_red"
        android:gravity="top"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_list_icone"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="matrix" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/item_list_esporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Futebol"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_list_qtd_amg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="72dp"
                android:text="amigos confirmados"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="4"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_list_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Pelada na praia"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_list_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Av boa viagem"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_list_quadra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="quadra"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_list_cidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boa Vieagem - Recife"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_list_participantes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13 participantes"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/item_list_content_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp" >

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="1dp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="1dp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="1dp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="1dp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="1dp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="1dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/item_list_privado"
                android:layout_width="13dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="6dp"
                android:src="@drawable/cadeado" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="73dp"
            android:layout_height="fill_parent"
            android:background="@drawable/campo_cinza"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_list_distancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60m"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_list_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_list_dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hoje"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_list_preco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 3,00"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>