<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_text_amigo"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/search_friend"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:ems="10"
                android:height="2dp"
                android:hint="@string/convide"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/cinza_txt"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.01"
                android:background="@drawable/my_bottom_line" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <br.com.JoinAndPlay.gridViewWithScroll.ExpandableHeightGridView
                android:id="@+id/gridView_invite"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fastScrollAlwaysVisible="false"
                android:fastScrollEnabled="true"
                android:numColumns="2" >
            </br.com.JoinAndPlay.gridViewWithScroll.ExpandableHeightGridView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/botao_invite"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/pesq_button"
                android:gravity="center_horizontal|top"
                android:padding="10dp"
                android:text="@string/editar"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>