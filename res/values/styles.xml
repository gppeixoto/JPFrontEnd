<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

	<style name="AlertStyle" parent="@android:style/Widget.TextView">
    	<item name="android:textStyle">bold</item>
    	<item name="android:textSize">18sp</item>
    	<item name="android:textColor">@color/white</item>
	</style>
	
  <style name="MyTheme" parent="android:Theme.Light">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@color/cinzafundo</item>
    <item name="android:tabWidgetStyle">@style/CustomTabWidget</item>
    <item name="android:textColor">#535353</item>
    <item name="android:calendarViewStyle">@style/customCalendar</item>
    
    
   <!--   <item name="android:listViewStyle">@style/MyListView</item>-->

    </style>

  <style name="BetterPickersLowEndTheme">
        <item name="bpDialogBackground">@drawable/dialog_full_holo_light</item>
        <item name="bpTitleColor">@color/red_pesquisa</item>
        <item name="bpTextColor">@color/cinza_escuro</item>
        <item name="bpDeleteIcon">@drawable/ic_backspace_light</item>
        <item name="bpCheckIcon">@drawable/ic_check_light</item>
        <item name="bpKeyBackground">@drawable/key_background_custom</item>
        <item name="bpButtonBackground">@drawable/button_background_custom</item>
        <item name="bpTitleDividerColor">@color/cinza_escuro</item>
        <item name="bpDividerColor">@color/cinza_escuro</item>
        <item name="bpKeyboardIndicatorColor">@color/red_pesquisa</item>
   </style>
   
  <style name="MyCustomBetterPickerTheme">
    <item name="bpTextColor">@color/red_pesquisa</item>
	</style>

  <style name="customCalendar" parent="android:Widget.CalendarView">
        <item name="android:unfocusedMonthDateColor">@color/cinza</item>
        <item name="android:focusedMonthDateColor">@color/black</item>
        <item name="android:showWeekNumber">false</item>
        <item name="android:selectedWeekBackgroundColor">@color/cinza</item>
        <item name="android:weekSeparatorLineColor">@color/cinza_escuro</item>
    </style>
    
    <style name="CustomTabWidget" parent="@android:style/Widget.TabWidget"></style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="OlaTheme">10</style>

    

</resources>
